{
  "name": "pawelgrzybek.com",
  "version": "2.0.0",
  "description": "My Jekyll based website pawelgrzybek.com",
  "author": "Pawel Grzybek",
  "keywords": [
    "css",
    "gulp",
    "scss",
    "sass",
    "mobile-first",
    "responsive",
    "jekyll"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pawelgrzybek/pawelgrzybek.github.io"
  },
  "scripts": {
    "build": "npm run build:css && npm run build:jekyll",
    "build:css": "node-sass _src/css/style.scss | postcss --use cssnano --no-map -o dist/css/style.css",
    "build:jekyll": "bundle exec jekyll build --drafts --future --quiet",
    "watch:css": "onchange '_src/**/*.scss' -- npm run build:css",
    "watch:jekyll": "onchange '_drafts/**/*.md' '_posts/*.md' 'dist/**/*' 'photos/**/*' -- npm run build:jekyll",
    "serve": "php -S 0.0.0.0:8000 -t _site/ & open http://0.0.0.0:8000",
    "dev": "npm run watch:jekyll & npm run watch:css & npm run serve"
  },
  "homepage": "https://pawelgrzybek.com",
  "devDependencies": {
    "cssnano": "3.10.0",
    "node-sass": "4.7.2",
    "onchange": "3.2.1",
    "postcss-cli": "4.1.1"
  }
}
